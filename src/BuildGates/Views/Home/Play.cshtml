<script src="/js/jquery-3.1.1.js"></script>
<script src="/js/jquery-ui.js"></script>
<script src="/js/objects.js"></script>
<script src="/js/scripts.js"></script>

<h2>Build Gates!</h2>
<h2>Level: @ViewBag.LevelId</h2>

<p><strong>Drag and drop the gates onto the grid to deliver electrical current to the light and turn it green! <br />Click on the inputs to toggle the On/Off switch.</strong></p>

<input hidden id="LevelId" value="@ViewBag.LevelId"/>

<body>
    <div id="success-modal">
        <div class="success-modal-header"><span class="close">&times;</span><h2>Success! You did it!</h2></div>
        <div class="success-modal-content"> <a id="nextLevel" href="/Home/Play/@(ViewBag.LevelId + 1)"><h3>Next Level</h3></a></div>
        
    </div>
    <div id="square-container">
        <div id="gate-container">
        </div>
        <button id="start">Start Level!</button>
    </div>
    <hr>
    
    <button id="reset">Reset</button>
    <button id="debug">Show/Hide Debug Panel</button>
    <div id="debug-panel">

    </div>
</body>